<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".LoraParametersFragment">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/seal_config_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center_horizontal|center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/seal_parameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: " />
            <EditText
                android:id="@+id/seal_config_value_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: " />
            <EditText
                android:id="@+id/seal_config_value_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_oid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OID: " />
            <EditText
                android:id="@+id/seal_config_value_oid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_sleepIdle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Idle: " />
            <EditText
                android:id="@+id/seal_config_value_sleepIdle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_sleepArm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Arm: " />
            <EditText
                android:id="@+id/seal_config_value_sleepArm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_tfix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS TFIX: " />
            <EditText
                android:id="@+id/seal_config_value_gps_tfix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_tpos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS TPOS: " />
            <EditText
                android:id="@+id/seal_config_value_gps_tpos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_fnear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS FNEAR: " />
            <EditText
                android:id="@+id/seal_config_value_gps_fnear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_fstop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS FSTOP: " />
            <EditText
                android:id="@+id/seal_config_value_gps_fstop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_fspd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS FSPD: " />
            <EditText
                android:id="@+id/seal_config_value_gps_fspd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_fskip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS FSKIP: " />
            <EditText
                android:id="@+id/seal_config_value_gps_fskip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_fsat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS FSAT: " />
            <EditText
                android:id="@+id/seal_config_value_gps_fsat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_gps_osi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS TFIX: " />
            <EditText
                android:id="@+id/seal_config_value_gps_osi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_time_gsm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME GSM: " />
            <EditText
                android:id="@+id/seal_config_value_time_gsm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_time_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME SMS: " />
            <EditText
                android:id="@+id/seal_config_value_time_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_time_egts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME EGTS: " />
            <EditText
                android:id="@+id/seal_config_value_time_egts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_alert_ft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALERT FT: " />
            <EditText
                android:id="@+id/seal_config_value_alert_ft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_alert_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALERT CL: " />
            <EditText
                android:id="@+id/seal_config_value_alert_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/seal_config_alert_al"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALERT AL: " />
            <EditText
                android:id="@+id/seal_config_value_alert_al"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seal_config_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Сохранить" />

            <Button
                android:id="@+id/btn_seal_config_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Закрыть" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>
